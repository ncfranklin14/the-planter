<h1 class="center-align">Plant Gallery:</h1>
<h4 class="center-align">Help name our plants!</h4>
<div class="container center-align">
    <div class="row">
        {{#each blogList}}
        <div class="col s6 m3">
            <div class="card ">
                <div class="card-image card-panel hoverable ">
                    <img class: "card-panel hoverable  src={{imageUrl}}>
                    <span class="card-title">{{title}}</span>
                </div>
                <div class="card-content">
                    <p>{{content}}</p>
                </div>
                <hr>
                <div class="card-action">
                    <form action="" placeholder="Add some name suggestions" id="{{id}}" data-id="{{id}}">
                        <p>Name my plant here:</p>
                        <textarea id="body" cols="30" rows="10"></textarea>

                        <button type="submit" class="btn-floating pulse btn-large waves-effect waves- green darken-3"><i class= "material-icons">add_cicle</i></button>
                        <div class = "likes-section">

                        <button type="submit">Submit</button>

                        <div class="likes-section">

                            <span class="likes">0 likes</span>
                            <button class="like-button">❤️</button>
                        </div>
                    </form>
                     </div>
                   {{>comment}} 
                </div>
            </div>
   
       


         {{/each}}
    </div>
    <script src="/js/gallery.js"></script>