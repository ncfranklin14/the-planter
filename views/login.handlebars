<div class="container">
    <div class="row">
        <div class="col s12">
            <h2 class="center-align" id="plantgal">Login</h2>
            <form class="center-align" id="login">
                <input class="teal darken-3 white-text center-align  " type="text" placeholder="username"
                    id="loginUsername">
                <input class="teal darken-3 white-text center-align" type="password" placeholder="password"
                    id="loginPassword" type="password">
                <button class=" waves-effect teal btn-small" type="submit">Login</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <h2 class="center-align" id="plantgal">Signup</h2>
            <form class="center-align" id="signup">
                <input class="teal darken-3 white-text center-align" type="text" placeholder="username"
                    id="signupUsername">
                <input class="teal darken-3 white-text center-align" type="password" placeholder="password"
                    id="signupPassword" type="password">
                <button class=" waves-effect teal btn-small" type="submit">Sign up</button>
            </form>
            <script src="/js/login.js"></script>

            <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
        </div>
    </div>
</div>